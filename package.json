{
  "name": "cloud-pigeon",
  "version": "0.1.0",
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "apps/electron",
    "apps/next"
  ],
  "scripts": {
    "start:electron": "yarn workspace cloud-pigeon-electron start",
    "start:next": "PORT=3001 yarn workspace cloud-pigeon-next dev",
    "build:next": "yarn workspace cloud-pigeon-next build",
    "build:electron": "yarn workspace cloud-pigeon-electron make",
    "lint-staged": "lint-staged",
    "lint:next": "eslint --ext .ts,.tsx apps/next/pages/**/*",
    "lint:electron": "eslint --ext .ts,.tsx apps/electron/src/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-amuench": "^2.2.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7"
  }
}
